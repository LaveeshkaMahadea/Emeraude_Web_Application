@model IEnumerable<Hoteru.Models.Hotel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.hotelName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hotelDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hotelAddress)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.hotelName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hotelDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hotelAddress)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
